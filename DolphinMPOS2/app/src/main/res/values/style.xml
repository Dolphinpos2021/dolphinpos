        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:paddingEnd">@dimen/large_margin</item>
<!--        <item name="android:background">@drawable/radius_button_disable_background</item>-->
        <item name="android:paddingTop">@dimen/large_margin</item>
        <item name="android:paddingBottom">@dimen/large_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
<!--        <item name="fontFamily">@font/gilroy_extra_bold</item>-->
    </style>



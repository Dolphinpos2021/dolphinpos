<resources>

    <style name="simple_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">textStart</item>
<!--        <item name="fontFamily">@font/gilroy_light</item>-->
    </style>

    <style name="simple_text_view_style.small">
        <item name="android:textSize">@dimen/small_text_size</item>
<!--        <item name="fontFamily">@font/gilroy_light</item>-->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="home_menu_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:drawablePadding">@dimen/extra_small_margin</item>
        <item name="android:minLines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:fontFamily">@font/gilroy_extra_bold</item>-->

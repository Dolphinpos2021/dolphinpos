            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_x="265dp"
            android:layout_y="363dp"
            android:text="Reports"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:weightSum="2">

    <ImageView
        android:id="@+id/customerLoyaltyImg"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_x="37dp"
        android:layout_y="369dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/customers" />
    <ImageView
        android:id="@+id/supportImg"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_x="237dp"
        android:layout_y="369dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/support" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_x="22dp"
            android:layout_y="473dp"
            android:text="Customer and Loyalty"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textView10"

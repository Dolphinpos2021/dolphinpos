            android:text="Sale"
            android:textSize="25dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_x="258dp"
            android:layout_y="169dp"

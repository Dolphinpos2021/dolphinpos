        android:layout_marginTop="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_x="22dp"
            android:layout_y="343dp"
